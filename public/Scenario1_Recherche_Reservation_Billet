// Scénario 1 : Recherche et Réservation de Billet
digraph {
	U [label=Utilisateur]
	IU [label="Interface Utilisateur"]
	SGM [label="Service de Gestion des Matchs"]
	BDD [label="Base de Données"]
	U -> IU [label="chercherMatch()"]
	IU -> SGM [label="requeteMatch()"]
	SGM -> BDD [label="obtenirMatchs()"]
	BDD -> SGM [label="listeMatchs()"]
	SGM -> IU [label="resultatsMatchs()"]
	IU -> U [label="afficherResultats()"]
	U -> IU [label="selectionnerMatch()"]
	IU -> SGM [label="requeteMatchDetail()"]
	SGM -> BDD [label="obtenirDetailsMatch()"]
	BDD -> SGM [label="detailsMatch()"]
	SGM -> IU [label="afficherDetails()"]
	IU -> U [label="afficherDetails()"]
	U -> IU [label="choisirPlace()"]
	IU -> SGM [label="verifierDisponibilitePlace()"]
	SGM -> BDD [label="obtenirDisponibilitePlace()"]
	BDD -> SGM [label="disponibilitePlace()"]
	SGM -> IU [label="afficherDisponibilite()"]
	IU -> U [label="afficherDisponibilite()"]
	U -> IU [label="reserverBillet()"]
	IU -> SGM [label="creerReservation()"]
	SGM -> BDD [label="enregistrerReservation()"]
	BDD -> SGM [label="confirmationReservation()"]
	SGM -> IU [label="afficherConfirmation()"]
	IU -> U [label="afficherConfirmation()"]
}
